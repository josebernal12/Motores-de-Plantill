<div style="background-color: grey; width: 900px; height: 500px; margin: 0px auto; border: 1px solid black;">
    <a class="nav-link active" aria-current="page" href="/">Home</a> <br> 
    <% if(Producto.length) { %> 
        <table class="table table-bordered border-dark" style="margin:3rem 0;">
            <thead class="thead-dark" style="background-color:aliceblue ;">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% Producto.forEach(producto => { %> 
                    <tr scope="row">
                        <td>
                            <%= producto.producto %> 
                        </td>
                        <td>
                            <%= producto.precio %> 
                        </td>
                        <td>
                            <img src="<%= producto.thumbnail %> " alt="<%= producto.title %> " style="width:6rem">
                        </td>
                        
                    </tr>  
                
                <% }) %> 
            </tbody>
        </table>
    <% } else { %> 
        <p style="color: white;">No hay ninguna producto :(</p>
    <% } %>     
    
    </div>

