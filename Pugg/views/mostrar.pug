extends main.pug
   
block content
  
    
    if hasAny
       table(class="table table-dark table-striped table-hover table-responsive text-center")
           thead 
               tr

                   th(scope="col")= "Tittle"             
                   th(scope="col")= "price"
                   th(scope="col")= "Thumbnail"  

           tbody
                each product in Producto
                    tr 
                        td=product.producto
                        td=`$  ${product.precio}`
                        td
                             img(src=product.thumbnail class="w-25")


                                    
    else
       h2="there no products" 



        a(href="/" class='btn btn-primary')